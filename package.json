{
    "name": "bookmarks",
    "displayName": "Bookmarks",
    "description": "Bookmarks for VS Code",
    "version": "0.0.1",
    "publisher": "",
    "repository": "https://github.com/damolinx/vscode-bookmarks",
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:bookmarks.addBookmark.global",
        "onCommand:bookmarks.addBookmark.tree",
        "onCommand:bookmarks.addBookmark.workspace",
        "onCommand:bookmarks.removeBookmark",
        "onView:bookmarks"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "bookmarks.addBookmark.global",
                "title": "Bookmark Editor (Global)",
                "category": "Bookmarks"
            },
            {
                "command": "bookmarks.addBookmark.tree",
                "title": "Bookmark Current Editor",
                "icon": "$(add)"
            },
            {
                "command": "bookmarks.addBookmark.workspace",
                "title": "Bookmark Editor (Workspace)",
                "category": "Bookmarks"
            },
            {
                "command": "bookmarks.removeBookmark",
                "title": "Remove Bookmark",
                "category": "Bookmarks",
                "icon": "$(close)"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "bookmarks.addBookmark.global",
                    "when": "editorIsOpen"
                },
                {
                    "command": "bookmarks.addBookmark.tree",
                    "when": "false"
                },
                {
                    "command": "bookmarks.addBookmark.workspace",
                    "when": "editorIsOpen && workbenchState != empty"
                },
                {
                    "command": "bookmarks.removeBookmark",
                    "when": "false"
                }
            ],
            "view/item/context": [
                {
                    "command": "bookmarks.addBookmark.tree",
                    "when": "view == bookmarks && viewItem == bookmarkGroup && editorIsOpen"
                },
                {
                    "command": "bookmarks.addBookmark.tree",
                    "when": "view == bookmarks && viewItem == bookmarkGroup && editorIsOpen",
                    "group": "inline"
                },  
                {
                    "command": "bookmarks.removeBookmark",
                    "when": "view == bookmarks && viewItem == bookmark"
                },
                {
                    "command": "bookmarks.removeBookmark",
                    "when": "view == bookmarks && viewItem == bookmark",
                    "group": "inline"
                }
            ]
        },
        "views": {
            "explorer": [
                {
                    "id": "bookmarks",
                    "name": "Bookmarks",
                    "icon": "$(bookmark)"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^9.1.1",
        "@types/node": "^12.20.52",
        "@types/vscode": "^1.67.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "@vscode/test-electron": "^1.6.1",
        "eslint": "^7.21.0",
        "glob": "^7.1.4",
        "mocha": "^9.2.2",
        "source-map-support": "^0.5.12",
        "typescript": "^4.6.4"
    }
}
